-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => movie_header_class, :id => "movie_header"}= link_to 'Movie Title', movies_path(sorter: "title")
      %th Rating
      %th{:class => rd_header_class, :id => "release_date_header"}= link_to 'Release Date', movies_path(sorter: "release_date")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
